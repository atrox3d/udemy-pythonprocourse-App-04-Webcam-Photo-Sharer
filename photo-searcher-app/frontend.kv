#
# define FirstScreen class frontend
#
<FirstScreen>:
    #
    #   define layout
    #
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        #
        #   adds image widget
        #
        Image:
            id: img
            # source: 'files/sunny.jpg'
            size_hint_y: 0.8
        #
        #   adds text input widget
        #
        TextInput:
            size_hint_y: 0.1
        #
        #   adds button widget
        #
        Button:
            text: 'Search Image'
            size_hint_y: 0.1
            #
            # calls FirstScreen().search_image()
            # root is FirstScreen() instance
            #
            on_press: root.search_image()

<RootWidget>:
    FirstScreen:
        id: first_screen
        name: 'first_screen'
